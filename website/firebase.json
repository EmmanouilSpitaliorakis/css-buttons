{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
      "source": "**",
      "headers": [ {
        "key": "**/*.@(css|woff|js)",
        "value": "max-age=31536000"
      } ]
    } ]
  }
}
